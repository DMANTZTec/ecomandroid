<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="5dp">


    <android.support.v7.widget.CardView
        android:id="@+id/cartView_card"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        android:layout_marginTop="50dp"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/cartView_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="start"

                android:layout_margin="10dp"
                android:padding="10dp"
                android:src="@drawable/ic_menu_gallery" />


            <TextView
                android:id="@+id/cartView_itemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/cartView_image"
                android:padding="2dp"
                android:text="item name" />

            <TextView
                android:id="@+id/cartView_itemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/cartView_itemName"
                android:padding="2dp"
                android:paddingLeft="5dp"
                android:text="item Price" />


            <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton

                android:id="@+id/cardView_elegentBtn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/cartView_itemName"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="7dp"

                android:padding="2dp"
                android:paddingLeft="7dp"
                app:textColor="#000000" />

            <TextView
                android:id="@+id/totalTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@id/cartView_itemPrice"
                android:layout_toRightOf="@id/cartView_itemPrice"
                android:padding="2dp"
                android:text="Total"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="7dp"
                android:layout_below="@id/totalTextView"
                android:layout_toEndOf="@id/cartView_itemPrice"
                android:layout_toRightOf="@id/cartView_itemPrice"
                android:padding="2dp"
                android:text="1024"
                android:textSize="20dp" />


            <!--
            <Button

                android:id="@+id/cart_delete_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardView_elegentBtn"
                android:layout_toRightOf="@id/cartView_image"
                android:text="delete" />
            -->
        </RelativeLayout>


    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>