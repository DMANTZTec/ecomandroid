<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentClient">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/productInfoCardView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:padding="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:elevation="2dp"
            >
            <RelativeLayout
                android:id="@+id/product_details_layout"
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <ImageView
                    android:id="@+id/productImage"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:padding="2dp"/>


            <TextView
                android:layout_toRightOf="@id/productImage"
                android:id="@+id/itemInfo"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:textSize="20sp"
                android:paddingLeft="50dp"
                android:padding="10dp"/>

                <TextView
                    android:layout_toRightOf="@id/productImage"
                    android:layout_below="@+id/itemInfo"
                    android:id="@+id/itemSize"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:textSize="20sp"
                    android:paddingLeft="50dp"
                    android:padding="1dp"/>

                <TextView
                    android:layout_toRightOf="@id/productImage"
                    android:layout_below="@+id/itemSize"
                    android:id="@+id/itemPrice"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:textSize="20sp"
                    android:paddingLeft="50dp"
                    android:padding="1dp"/>




            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <EditText

            android:layout_below="@id/productInfoCardView"
            android:id="@+id/enterAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Amount"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/enterAmount"
            android:layout_centerInParent="true"
            android:onClick="startPayment"
            android:paddingTop="20sp"
            android:text="Pay"
            android:textSize="30sp" />



    </RelativeLayout>

</android.support.constraint.ConstraintLayout>